<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean   id="defaultMessageDigitBeanFactory"
            class="com.vj.prospring5.application.factorybean.MessageDigitsFactoryBean" />

    <bean   id="sha1MessageDigitBeanFactory"
            class="com.vj.prospring5.application.factorybean.MessageDigitsFactoryBean"
            p:algorithm="SHA1"/>
    
    <bean   id="messageDigester"
            class="com.vj.prospring5.application.factorybean.MessageDigester"
            p:messageDigest1-ref="defaultMessageDigitBeanFactory"
            p:messageDigest2-ref="sha1MessageDigitBeanFactory" />
    
</beans>